@{
    ViewData["Title"] = "Quote Detail";
}

@model Quote

<div class="text-center">
    <h1 class="display-4">Quote Detail</h1>
</div>
<br /><br />
<div>
    <h4><b>Quote: </b>@Model.QuoteText</h4><br />
    <h4><b>Author: </b>@Model.Author</h4><br />
    @if (Model.Date != null)
    {
        <h4><b>Date: </b>@ViewBag.Date</h4><br />
    }
    @if (Model.Subject != null)
    {
        <h4><b>Subject: </b>@Model.Subject</h4><br />
    }
    @if (Model.Citation != null)
    {
        <h4><b>Citation: </b>@Model.Citation</h4><br />
    }
    <a class="btn btn-primary" asp-controller="Home" asp-action="Edit" asp-route-quote="@Model.QuoteId">Edit Quote</a>
    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-quote="@Model.QuoteId">Delete Quote</a>
</div>